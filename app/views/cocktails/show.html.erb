
<div class="container">
  <h1><%= @cocktail.name %></h1>
  <p>Find me in app/views/cocktails/show.html.erb</p>

  <%= cl_image_tag @cocktail.photo, height: 600, width: 800, crop: :fill %>

  <% @cocktail.doses.each do |i| %>
    <%= i.ingredient.name %>
    <%= i.description %>
    <%= link_to 'Delete this ingredient', dose_path(i), method: :delete %>
    <br>
  <% end %>
  <br>
  <br>
  <br>

  <div class="row">
    <div class="col-4">
      <%= simple_form_for ([@cocktail, @dose]) do |f| %>
        <%= f.association :ingredient %>
        <%= f.input :description %>
        <%= f.button :submit, class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
