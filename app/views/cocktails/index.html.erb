<div class="container">
  <div class="title">
    <h1>Welcome!</h1>
    <h2>Here is the list of our cocktails</h2>
  </div>
  <div class="row justify-content-center">
    <div class="col-4">

      <% @cocktails.each do |cocktail| %>
        <p><%=link_to cocktail.name, cocktail_path(cocktail) %></p>
        <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill %>
      <% end %>
      <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary"%>
    </div>
  </div>
</div>
